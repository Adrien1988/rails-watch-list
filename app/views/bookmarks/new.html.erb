<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h1>New Bookmark</h1>
      <%= simple_form_for [ @list, @bookmark ] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= f.submit "Submit bookmark", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>