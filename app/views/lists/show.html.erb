<div class="container">
  <h2><%= @list.name %></h2>

  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item"><%= bookmark.comment %><%= link_to "delete", 
    bookmark_path(bookmark),
    method: :delete,
    data: { confirm: "Are you shure?"} %>
      </li>
    <% end %>
  </ul>
  <%= link_to 'Add a bookmark', new_list_bookmark_path(@list) %>
</div>
